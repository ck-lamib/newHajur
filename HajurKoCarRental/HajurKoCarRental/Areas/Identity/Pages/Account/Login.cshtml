@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
}

<div class=" row">
	<div class="col-md-6">
		<section class="bg0 p-t-23 p-b-130 mt-5">
			<form id="account" method="post">
				<h2 class="ltext-103 cl5 text-dark text-dark">Welcome To Hajur ko Car Rental!</h2>
				<hr class=" text-dark " style="height:3px; width:100%; border-width:0;" />
				<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

				<div class="form-floating mb-3">
					<input asp-for="Input.Email" class="form-control control-label text-dark" autocomplete="username" aria-required="true" placeholder="name@example.com" />
					<label asp-for="Input.Email" class="form-label control-label text-dark">Email</label>
					<span asp-validation-for="Input.Email" class="text-danger control-label text-dark"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Password" class="form-control control-label text-dark" autocomplete="username" aria-required="true" placeholder="name@example.com" />
					<label asp-for="Input.Password" class="form-label control-label text-dark">Password</label>
					<span asp-validation-for="Input.Password" class="text-danger control-label text-dark"></span>
				</div>

				<div class="checkbox mb-3">
					<label asp-for="Input.RememberMe" class="form-label">
						<input class="form-check-input" asp-for="Input.RememberMe" />
						<div class="text-dark">
							@Html.DisplayNameFor(m => m.Input.RememberMe)
						</div>
					</label>
				</div>
				<div>
					<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-dark">Log in</button>
				</div>
				<div class="row p-t-10">
					<div class="col-md-4">
						<a class="btn btn-dark" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
					</div class>
					<div class="col-md-8">
						<a class="btn btn-dark" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
					</div>
				</div>
			</form>
		</section>
	</div>
	<div class="col-md-6">
		<img src="https://img.freepik.com/premium-vector/namaste-greeting-background-design-template_649214-734.jpg?w=740" style="height:550px; width:700px"/>
	</div>
</div>




@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	}

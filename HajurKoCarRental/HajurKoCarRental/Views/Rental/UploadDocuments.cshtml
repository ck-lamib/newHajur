@model HajurKoCarRental.Models.DocumentUploadViewModel

@{
    ViewData["Title"] = "Upload Documents";
}


<h4 class="ltext-103 cl5 text-dark ">
	UPload Document
</h4>

<section class="bg0 p-t-23 p-b-80 mt-5">
	<div class="container">

		<div class="p-b-4">
			
			<hr class=" text-dark " style="height:3px; width:100%; border-width:0;" />
			<div class="row">
				<div class="col-md-4">
					<form asp-action="UploadDocuments" method="post" enctype="multipart/form-data">

						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				
						<div class="form-group">
							<label asp-for="CitizenPaper" class="control-label text-dark">Citizenship </label>
								<input type="file" asp-for="CitizenPaper" class="form-control" accept=".png, .pdf" required  />
							<span asp-validation-for="CitizenPaper" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="DrivingLicense" class="control-label text-dark">Driving License </label>
							<input type="file" asp-for="DrivingLicense" class="form-control" accept=".png, .pdf" required />
							<span asp-validation-for="DrivingLicense" class="text-danger"></span>
						</div>

					

						<div class="row">
							<div class="form-group col-5">
								<input type="submit" value="Upload document" class="btn btn-dark" />
							</div>
							<div class="col-7">
								<a class="btn btn-dark" role="button" asp-action="Index">Back</a>
							</div>
						</div>
					</form>
				</div>
			</div>


		</div>
	</div>
</section>

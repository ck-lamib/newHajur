@model HajurKoCarRental.Models.DocumentUploadViewModel

@{
    ViewData["Title"] = "Upload Documents";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-12">
        <h4>Upload Documents</h4>
        <form asp-action="UploadDocuments" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="DrivingLicense" class="control-label">Driving License</label>
                <input asp-for="DrivingLicense" type="file" class="form-control-file" accept=".png, .pdf" required>
                <span asp-validation-for="DrivingLicense" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CitizenPaper" class="control-label">Citizen Paper</label>
                <input asp-for="CitizenPaper" type="file" class="form-control-file" accept=".png, .pdf" required>
                <span asp-validation-for="CitizenPaper" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Upload Documents</button>
        </form>
    </div>
</div>

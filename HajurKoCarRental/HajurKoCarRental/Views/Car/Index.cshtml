@model IEnumerable<HajurKoCarRental.Models.CarInfo>

@{
    ViewData["Title"] = "Index";
}

<section class="bg0 p-t-23 p-b-140 mt-5">
	<div class="container">

		<br />
		<br />
		<div class="p-b-10">
			<div class="col-10">
				<h4 class="ltext-103 cl5 text-dark text-center">
					Our Cars
				</h4
				>
			</div>
			<br />
			<div class="row m-b-15">
				
				<div class="col-2">
					<a role="button" asp-action="CarAvailable" class="btn btn-dark">Car Available</a>
				</div><div class="col-2">
					<a role="button" asp-action="CarOnRent" class="btn btn-dark">Car on Rent</a>
				</div><div class="col-3">
					<a role="button" asp-action="FrequentlyRentedCars" class="btn btn-dark">Frequently Rented Cars</a>
				</div><div class="col-3">
					<a role="button" asp-action="NotFrequentlyRentedCars" class="btn btn-dark">Not Frequently Rented Cars</a>
				</div>
			
				<div class="col-2">
					<button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("Create")'">Create New</button>
				</div>
			</div>


			<table class="table table-hover">
				<thead>
					<tr>
						<th class="text-uppercase text-secondary text-xxx font-weight-bolder opacity-10">
							@Html.DisplayNameFor(model => model.CarImage)
						</th>
						<th class="text-uppercase text-secondary text-xxx font-weight-bolder opacity-10">
							@Html.DisplayNameFor(model => model.CarName)
						</th>
						<th class="text-uppercase text-secondary text-xxx font-weight-bolder opacity-10">
							@Html.DisplayNameFor(model => model.CarModel)
						</th>
						<th class="text-uppercase text-secondary text-xxx font-weight-bolder opacity-10">
							@Html.DisplayNameFor(model => model.RentPrice)
						</th>
						<th class="text-uppercase text-secondary text-xxx font-weight-bolder opacity-10">
							@Html.DisplayNameFor(model => model.is_available)
						</th>
						<th class="text-uppercase text-secondary text-xxx font-weight-bolder opacity-10">
							Action
						</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						@*var value = @Html.DisplayFor(modelItem => item.is_available);*@
						<tr>
							<td>
								<img src="@Html.DisplayFor(model => item.CarImage)" alt="Car Image" height="100" width="100" />
							</td>
							<td class="text-xs font-weight-bold mb-0">
								@Html.DisplayFor(modelItem => item.CarName)
							</td>
							<td class="text-xs font-weight-bold mb-0">
								@Html.DisplayFor(modelItem => item.CarModel)
							</td>
							<td class="text-xs font-weight-bold mb-0">
								@Html.DisplayFor(modelItem => item.RentPrice)
							</td>

							@if (@item.is_available == true)
							{
								<td class="text-xs font-weight-bold mb-0">
									Available
								</td>
							}
							else
							{
								<td class="text-xs font-weight-bold mb-0">
									Not Available
								</td>
							}

							<td>
								<a class="btn btn-dark" role="button" asp-action="Edit" asp-route-id="@item.id">Edit</a>
								<a class="btn btn-dark" role="button" asp-action="Details" asp-route-id="@item.id">Details</a>
								<a class="btn btn-dark" role="button" asp-action="Delete" asp-route-id="@item.id">Delete</a>
							</td>
						</tr>
					}

				</tbody>
			</table>
		</div>
	</div>
</section>